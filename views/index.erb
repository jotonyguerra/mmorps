<h1> MMORPS </h1>
  <%if @game_state%>
    <h4><%=@game_state%></h4>
  <%end%>
<h4>Player Score: <%= session[:player_score] %> </h4>
<h4>computer Score: <%= session[:computer_score] %> </h4>
<% if !@winner %>
<form action="/results" method="post">
  <button type="submit" name="operation" value="paper" >Paper </button>
  <button type="submit" name="operation" value="scissors" >Scissors </button>
  <button type="submit" name="operation" value="rock" >Rock </button>
</form>
<%end%>
<%if @winner%>
  <h4><%=@winner%></h4>
  <form action="/reset" method="get">
    <button type="submit" name="play_again" value="true" >play again! </button>
  </form>
<%end%>
